  </configSections>
  <connectionStrings>
    <add name="REMS" connectionString="Data Source=192.168.19.142;Initial Catalog=rems;User ID=sa;Password=ml;Persist Security Info=False;Connection Timeout=60000000; pooling=true; Max Pool Size=200;"
